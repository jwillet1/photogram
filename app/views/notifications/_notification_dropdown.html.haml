.dropdown.notification-dropdown
  %button.btn.btn-default.dropdown-toggle{ type: 'button', id: 'notification-menu', data: { toggle: 'dropdown' }, 'aria-haspopup': true, 'aria-expanded': true }
    = current_user.notifications.where(read: false).count
    %span.glyphicon.glyphicon-flag
  %ul.dropdown-menu.notifcations-menu{ 'aria-labelledby': 'notification-menu' }
    = render current_user.notifications.where(read: false).order('created_at DESC').last(5)
    %li.divider{ role: 'separator' }
    %li.text-center= link_to 'View All', notifications_path